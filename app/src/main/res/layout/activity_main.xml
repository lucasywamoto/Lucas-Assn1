<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_325"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--background image-->
    <ImageView
        android:id="@+id/backgroundImage_325"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Background image"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />

    <LinearLayout
        android:id="@+id/linearLayout_325"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!--logo-->
        <ImageView
            android:id="@+id/logoImage_325"
            android:layout_width="160dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:background="@drawable/logo"
            android:contentDescription="Logo" />

        <!--weight input-->
        <LinearLayout
            android:id="@+id/weightLayout_325"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="100dp"
            android:orientation="vertical"
            android:layout_marginTop="32dp">

            <EditText
                android:id="@+id/editTextWeight_325"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="56sp"
                android:background="@null"
                android:inputType="numberDecimal"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/dividerWeight_325"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:dividerThickness="2dp"
                app:dividerColor="@color/white" />

            <TextView
                android:id="@+id/textViewWeight_325"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight (kg)"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <!--height input-->
        <LinearLayout
            android:id="@+id/heightLayout_325"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="100dp"
            android:orientation="vertical"
            android:layout_marginTop="32dp">

            <EditText
                android:id="@+id/editTextHeight_325"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="56sp"
                android:background="@null"
                android:inputType="numberDecimal" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/dividerHeight_325"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:dividerThickness="2dp"
                app:dividerColor="@color/white" />

            <TextView
                android:id="@+id/textViewHeight_325"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Height (m)"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonCalculate_325"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="Calculate"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!--calculation output-->
        <TextView
            android:id="@+id/textViewResult_325"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:paddingTop="32dp"
            android:visibility="invisible" />

        <!--evaluation box-->
        <TextView
            android:id="@+id/textViewEvaluation_325"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingTop="16dp"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:visibility="invisible" />
    </LinearLayout>
</FrameLayout>
